mixin excursions (excursionData)
  each card in excursionData
    .swiper-slide
      a.excursion-card(href=card.link)
        .excursion-card__image
          img(src=card.imgSrc)
          .excursion-card__badges
            span.excursion-card__badge=card.duration
        .excursion-card__content
          h3.excursion-card__title=card.title
          p.excursion-card__timetable
            span #{card.days}:
            | #{card.time}
          .excursion-card__price=card.price
            small / чел



.excursion
  .container
    h2.title-section Экскурсии на Новый Год и Рождество
    .excursion__slider-container
      .excursion__slider-wrapper
        .excursion__list.swiper-wrapper

          +excursions(excursionData)

        .swiper-pagination



